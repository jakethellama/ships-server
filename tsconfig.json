{
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": ["es2023"],
        "module": "node16",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",


        "noImplicitAny": true,
        "allowJs": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports" : true,
        
    }, 

    "include": ["src/**/*"],
    "exclude": ["eslint.config.mjs", "node_modules"],
}